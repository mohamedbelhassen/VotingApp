<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#404040">

    <ImageView
        android:id="@+id/star_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/bill_gates"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/star_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/star_photo"
        android:layout_toEndOf="@+id/star_photo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="1"
        android:textColor="#ffffff"
        android:layout_margin="5dp"
         />

    <TextView
        android:id="@+id/star_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/star_id"
        android:layout_toRightOf="@+id/star_photo"
        android:layout_toEndOf="@+id/star_photo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Bill Gates"
        android:textColor="#ffffff"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/star_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/star_photo"
        android:layout_toEndOf="@+id/star_photo"
        android:layout_below="@id/star_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="1000"
        android:textColor="#ffffff"
        android:layout_margin="5dp" />
</RelativeLayout>